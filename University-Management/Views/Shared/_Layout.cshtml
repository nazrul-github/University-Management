<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container">

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("UMRC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Department Setup
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                @Html.ActionLink("Save Department", "Create", "Department")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("View All Departments", "ViewDepartment", "Department")
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Course Setup
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                @Html.ActionLink("Save Course", "Create", "Course")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("View Course Statics", "CourseStatics", "Course")
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Teacher Setup
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                @Html.ActionLink("Save Teacher", "Create", "Teacher")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("Course Assign To Teacher", "AssignCourse", "Course")
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Student Setup
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                @Html.ActionLink("Register Student", "Create", "Student")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("Enroll in a Course", "EnrollToCourse", "Student")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("Save Student Result", "AddResult", "Result")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("View Student Result", "ViewResult", "Result")
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Classroom Setup
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                @Html.ActionLink("Allocate Classrooms", "AllocateClassRoom", "ClassRoom")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("Class Schedule", "ClassAllocationAndRoomView", "ClassRoom")
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                             Un-assign & Un-allocate
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                @Html.ActionLink("Unassign All Courses", "UnAssignCourses", "Course")
                            </li>
                            <li class="dropdown-item">
                                @Html.ActionLink("Unallocate Class Rooms", "UnAllocateClassRoom", "ClassRoom")
                            </li>
                        </ul>
                    </li>




                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content mt-md-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
